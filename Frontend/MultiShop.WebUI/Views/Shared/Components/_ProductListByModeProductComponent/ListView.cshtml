@model PagedResult<ResultProductDTO>

<style>
    .product-list-item {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        margin-bottom: 20px;
        display: flex;
        align-items: stretch;
    }

        .product-list-item:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.12);
        }

    .list-image-wrapper {
        position: relative;
        width: 200px;
        min-width: 200px;
        height: 200px;
        overflow: hidden;
        background: #f8f9fa;
    }

        .list-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .product-list-item:hover .list-image-wrapper img {
        transform: scale(1.1);
    }

    .list-discount-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: #FF6B6B;
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        z-index: 1;
    }

    .list-product-content {
        flex: 1;
        padding: 25px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .list-product-header {
        margin-bottom: 15px;
    }

    .list-product-title {
        font-size: 20px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        text-decoration: none;
        display: block;
        transition: color 0.2s ease;
    }

        .list-product-title:hover {
            color: #FFD333;
        }

    .list-product-description {
        color: #666;
        font-size: 14px;
        line-height: 1.6;
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .list-rating-wrapper {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 15px;
    }

        .list-rating-wrapper .fa-star {
            color: #FFD333;
            font-size: 14px;
        }

    .list-rating-count {
        color: #666;
        font-size: 13px;
        margin-left: 5px;
    }

    .list-product-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .list-price-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .list-current-price {
        font-size: 26px;
        font-weight: 700;
        color: #de7d73;
        margin: 0;
    }

    .list-old-price {
        font-size: 18px;
        color: #999;
        text-decoration: line-through;
        margin: 0;
    }

    .list-actions {
        display: flex;
        gap: 10px;
    }

    .list-action-btn {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: #f8f9fa;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        cursor: pointer;
    }

        .list-action-btn:hover {
            background: #FFD333;
            transform: scale(1.1);
        }

        .list-action-btn i {
            color: #333;
            font-size: 16px;
        }

        .list-action-btn.primary {
            background: #FFD333;
            width: auto;
            padding: 0 25px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 14px;
            color: #000000;
            text-decoration: none;
        }

            .list-action-btn.primary:hover {
                background: #f0c020;
                color: #000000;
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .product-list-item

    {
        flex-direction: column;
    }

    .list-image-wrapper {
        width: 100%;
        height: 250px;
    }

    .list-product-footer {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
    }

    .list-actions {
        width: 100%;
        justify-content: space-between;
    }

    }
</style>

<div class="container-fluid">
    @foreach (var item in Model.Items)
    {
        decimal discountAmount = item.ProductPrice - ((item.ProductPrice * 20) / 100);

        <div class="product-list-item">
            <div class="list-image-wrapper">
                <img src="@item.ProductImageUrl" alt="@item.ProductName">
            </div>

            <div class="list-product-content">
                <div>
                    <div class="list-product-header">
                        <a class="list-product-title" href="/Products/ProductDetail/@item.ProductId">@item.ProductName</a>

                        <div class="list-rating-wrapper">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <span class="list-rating-count">(5 değerlendirme)</span>
                        </div>
                    </div>

                    <p class="list-product-description">
                        @item.ProductDescription
                    </p>
                </div>

                <div class="list-product-footer">
                    <div class="list-price-wrapper">
                        <h3 class="list-current-price">@item.ProductPrice.ToString("N2") ₺</h3>
                    </div>

                    <div class="list-actions">
                        <button class="list-action-btn" title="Favorilere Ekle">
                            <i class="far fa-heart"></i>
                        </button>
                        <button class="list-action-btn" title="Karşılaştır">
                            <i class="fa fa-sync-alt"></i>
                        </button>
                        <button class="list-action-btn" title="Hızlı Görüntüle">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="/ShoppingCart/AddBasketItem/@item.ProductId"
                           class="list-action-btn primary"
                           title="Sepete Ekle">
                            <i class="fa fa-shopping-cart mr-2"></i>
                            Sepete Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <div class="col-12 mt-4">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" style="border-radius: 5px;"
                           href="@Url.Action("Index", new {
                               Page = i,
                               Price = Context.Request.Query["Price"],
                               SearchText = Context.Request.Query["SearchText"],
                               ViewMode = Context.Request.Query["ViewMode"],
                               PageSize = Model.PageSize
                           })">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}


