@model List<ResultCouponDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary">
            <i class="fa fa-ticket"></i> İndirim Kuponları
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-ticket"></i> İndirim Kuponları</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>İndirim Kuponları'nın Listelenmesi</h4>
                    <p>İndirim Kuponları ile ilgili listeleme, ekleme, silme ve güncelleme işlemlerini aşağıdan gerçekleştirebilirsiniz.</p>
                    <div class="bs-example" data-example-id="hoverable-table">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kupon Kodu</th>
                                    <th>İndirim Oranı (%)</th>
                                    <th>Aktif/Pasif</th>
                                    <th>Son Geçerlilik Tarihi</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>                                       
                                        <td>@item.CouponCode</td>
                                        <td>%@item.Rate</td>
                                        @if (item.IsActive)
                                        {
                                            <td><span style="background:#28a745; color:white; padding:3px 10px; border-radius:20px; font-size:12px;">Aktif</span></td>
                                        }
                                        else
                                        {
                                            <td><span style="background:#dc3545; color:white; padding:3px 10px; border-radius:20px; font-size:12px;">Pasif</span></td>
                                        }
                                        <td>@item.ValidDate.ToString("dd MMM yyyy - HH:mm")</td>
                                        <td>
                                            <a href="/Admin/Discount/DeleteDiscount/@item.CouponId"
                                               class="btn btn-danger btn-rounded btn-sm">
                                                <i class="bi bi-trash"></i> Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Admin/Discount/UpdateDiscount/@item.CouponId"
                                               class="btn btn-warning btn-rounded btn-sm">
                                                <i class="bi bi-pencil-square"></i> Güncelle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/Discount/CreateDiscount" class="btn btn-primary btn-rounded btn-sm">
                            <i class="bi bi-plus-circle"></i> Yeni Kupon Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
