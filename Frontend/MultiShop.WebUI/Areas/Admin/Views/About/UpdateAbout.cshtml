@model GetAboutDTO

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-info-circle"></i> Hakkında
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-info-circle"></i> Hakkında</li>
            <li class="active"><i class="bi bi-pencil-square"></i> Hakkında Bölümü Güncelleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Hakkında Bölümü Güncelleme</h4>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="AboutId" />
                        <input type="hidden" asp-for="Status" />
                        <div class="form-group">
                            <label>E-Mail Adresi</label>
                            <input class="form-control" type="email" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <input class="form-control" type="text" asp-for="Address">
                        </div>
                        <div class="form-group">
                            <label>Telefon</label>
                            <input class="form-control" type="text" asp-for="Phone">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </button>
                        <a href="/Admin/About/Index" class="btn btn-default btn-rounded btn-sm ">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
