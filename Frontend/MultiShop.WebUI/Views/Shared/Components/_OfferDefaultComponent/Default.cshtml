@model List<ResultSpecialOfferDTO>

@{
    var offersBottom = Model.Skip(2).Take(2).ToList();
}

<!-- Offer Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">
        @foreach (var item in offersBottom)
        {
            <div class="col-md-6">
                <div class="product-offer mb-30" style="height: 300px; border-radius: 16px;">
                    <img class="img-fluid" src="@item.ImageUrl" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@item.Title</h6>
                        <h3 class="text-white mb-3">@item.SubTitle</h3>
                        <a href="" class="btn btn-primary">Şimdi Keşfet</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Offer End -->
