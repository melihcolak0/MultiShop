@model GetCargoCompanyDTO

@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-building"></i> Kargo Şirketleri
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-building"></i> Kargo Şirketleri</li>
            <li class="active"><i class="bi bi-pencil-square"></i> Kargo Şirketi Güncelleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Kargo Şirketi Güncelleme</h4>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="CargoCompanyId" />
                        <div class="form-group">
                            <label>Kargo Şirketi Adı</label>
                            <input class="form-control" type="text" asp-for="CargoCompanyName">
                        </div>                      
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </button>
                        <a href="/Admin/CargoCompany/Index" class="btn btn-default btn-rounded btn-sm ">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
