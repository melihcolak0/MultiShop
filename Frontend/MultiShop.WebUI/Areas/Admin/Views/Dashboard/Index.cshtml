@model DashboardViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<style>
    .progress-container {
        width: 100%;
        height: 25px;
        background: #f0f0f0;
        border: 1px solid #ddd;
        border-radius: 4px;
        position: relative;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        transition: width 0.3s ease;
    }

    .progress-text {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 13px;
        color: #333;
        z-index: 2;
    }

    .progress-total {
        width: 100%;
        height: 25px;
        background-color: #428bca;
        border: 1px solid #357ebd;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: bold;
        font-size: 13px;
    }
</style>


<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary">
            <i class="fa fa-home"></i> Dashboard
        </h3>      
    </section>

    <section class="content">
        <!-- Özet Kartlar -->
        <div class="row">
            @{
                var totalProducts = Model.CategoryProducts.Sum(x => x.ProductCount);
                var totalCategories = Model.CategoryProducts.Count();
                var maxCategory = Model.CategoryProducts.OrderByDescending(x => x.ProductCount).FirstOrDefault();
                var avgProducts = totalCategories > 0 ? (totalProducts / (double)totalCategories) : 0;
            }
            <div class="col-lg-3 col-xs-6">
                <div class="media-box">
                    <div class="media-icon pull-left"><i class="fa fa-cubes"></i></div>
                    <div class="media-info">
                        <h5>Toplam Ürün</h5>
                        <h3>@totalProducts</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="media-box bg-sea">
                    <div class="media-icon pull-left"><i class="fa fa-list"></i></div>
                    <div class="media-info">
                        <h5>Kategori Sayısı</h5>
                        <h3>@totalCategories</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="media-box bg-blue">
                    <div class="media-icon pull-left"><i class="fa fa-star"></i></div>
                    <div class="media-info">
                        <h5>En Çok Ürün</h5>
                        <h3>@(maxCategory?.ProductCount ?? 0) <small class="pull-right" style="font-size: 12px; margin-top: 8px; color:#fff;">@(maxCategory?.CategoryName ?? "-")</small></h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="media-box bg-green">
                    <div class="media-icon pull-left"><i class="fa fa-calculator"></i></div>
                    <div class="media-info">
                        <h5>Ortalama Ürün</h5>
                        <h3>@avgProducts.ToString("F1") <small class="pull-right" style="font-size: 12px; margin-top: 8px; color:#fff;">Kategori başına</small></h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grafik Bölümü -->
        <div class="row">
            <div class="col-lg-8">
                <div class="chart-box">
                    <h4><i class="fa fa-bar-chart"></i> Kategorilere Göre Ürün Dağılımı</h4>
                    <div class="chart">
                        <div style="position: relative; height: 350px;">
                            <canvas id="categoryBarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="chart-box">
                    <h4><i class="fa fa-pie-chart"></i> Dağılım Oranı</h4>
                    <div class="chart">
                        <div style="position: relative; height: 350px;">
                            <canvas id="categoryPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detaylı Tablo -->
        <div class="row">
            <div class="col-xs-12">
                <div class="chart-box">
                    <h4><i class="fa fa-table"></i> Detaylı Kategori Listesi</h4>
                    <div class="chart">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr class="bg-primary">
                                        <th style="width:50px;">#</th>
                                        <th>Kategori Adı</th>
                                        <th style="width:150px;" class="text-center">Ürün Sayısı</th>
                                        <th style="width:300px;">Yüzde Dağılım</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var rowIndex = 1;
                                    }

                                    @foreach (var item in Model.CategoryProducts.OrderByDescending(x => x.ProductCount))
                                    {
                                        var percentage = totalProducts > 0
                                        ? (item.ProductCount * 100.0 / totalProducts)
                                        : 0;

                                        string barColor =
                                        percentage > 20 ? "#5cb85c" :
                                        percentage > 10 ? "#5bc0de" :
                                        "#f0ad4e";

                                        <tr>
                                            <td class="text-center"><strong>@rowIndex</strong></td>

                                            <td>
                                                <i class="fa fa-folder-o text-primary"></i>
                                                <strong>@item.CategoryName</strong>
                                            </td>

                                            <td class="text-center">
                                                <span class="label label-info" style="font-size:12px;">
                                                    @item.ProductCount ürün
                                                </span>
                                            </td>

                                            <td>
                                                <div class="progress-container">
                                                    <div class="progress-bar"
                                                         style="width:@percentage.ToString("F2", CultureInfo.InvariantCulture)%; background-color:@barColor;">
                                                    </div>


                                                    <div class="progress-text">
                                                        @percentage.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        rowIndex++;
                                    }
                                </tbody>

                                <tfoot>
                                    <tr class="bg-light-gray">
                                        <th colspan="2" class="text-right">TOPLAM:</th>
                                        <th class="text-center">
                                            <span class="label label-primary" style="font-size:12px;">
                                                @totalProducts ürün
                                            </span>
                                        </th>
                                        <th>
                                            <div class="progress-total">100%</div>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


