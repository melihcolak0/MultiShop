@model CreateCargoOperationDTO

@{
    ViewData["Title"] = "CreateCargoOperation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-cogs"></i> Kargo Operasyonları
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-cogs"></i> Kargo Operasyonları</li>
            <li class="active"><i class="bi bi-plus-circle"></i> Yeni Kargo Operasyonu Ekleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Yeni Kargo Operasyonu Ekleme</h4>
                    <br />
                    <form method="post">
                        <div class="form-group">
                            <label>Barkod</label>
                            <input class="form-control" type="text" asp-for="Barcode">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-plus-circle"></i> Ekle
                        </button>
                        <a href="/Admin/CargoOperation/Index" class="btn btn-default btn-rounded btn-sm">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
