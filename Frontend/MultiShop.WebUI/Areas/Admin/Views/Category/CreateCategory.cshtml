@model CreateCategoryDTO

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-list"></i> Kategoriler
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-list"></i> Kategoriler</li>
            <li class="active"><i class="bi bi-plus-circle"></i> Yeni Kategori Ekleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Yeni Kategori Ekleme</h4>
                    <br />
                    <form method="post">
                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <input class="form-control" type="text" asp-for="CategoryName">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input class="form-control" type="text" asp-for="CategoryImageUrl">
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-plus-circle"></i> Ekle
                        </button>
                        <a href="/Admin/Category/Index" class="btn btn-default btn-rounded btn-sm">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
