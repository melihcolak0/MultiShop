@model List<ResultContactDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary">
            <i class="fa fa-phone"></i> İletişim
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-phone"></i> İletişim</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="chart-box">
                    <h4>İletişim Bölümleri'nin Listelenmesi</h4>
                    <p>İletişim bölümü ile ilgili listeleme, ekleme, silme ve güncelleme işlemlerini aşağıdan gerçekleştirebilirsiniz.</p>
                    <div class="bs-example" data-example-id="hoverable-table">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı ve Soyadı</th>
                                    <th>E-Mail Adresi</th>
                                    <th>Konu</th>
                                    <th>Gönderilme Tarih</th>
                                    <th>Okundu mu?</th>
                                    <th>Okundu/Okunmadı</th>
                                    <th>Sil</th>
                                   @*  <th>Güncelle</th> *@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToString("dd MMM yyyy - HH:mm")</td>
                                        @if (item.IsRead)
                                        {
                                            <td><span style="background:#2870a7; color:white; padding:3px 10px; border-radius:20px; font-size:12px;">Okundu</span></td>
                                        }
                                        else
                                        {
                                            <td><span style="background:#a72850; color:white; padding:3px 10px; border-radius:20px; font-size:12px;">Okunmadı</span></td>
                                        }
                                        @if (item.IsRead)
                                        {
                                            <td>
                                                <a href="/Admin/Contact/ChangeContactReading/@item.ContactId"
                                                   class="btn btn-danger btn-rounded btn-sm">
                                                    <i class="bi bi-x"></i> Okunmadı Yap
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <a href="/Admin/Contact/ChangeContactReading/@item.ContactId"
                                                   class="btn btn-success btn-rounded btn-sm">
                                                    <i class="bi bi-check"></i> Okundu Yap
                                                </a>
                                            </td>
                                        }
                                        <td>
                                            <a href="/Admin/Contact/DeleteContact/@item.ContactId"
                                               class="btn btn-danger btn-rounded btn-sm">
                                                <i class="bi bi-trash"></i> Sil
                                            </a>
                                        </td>
                                        @* <td>
                                            <a href="/Admin/Contact/UpdateContact/@item.ContactId"
                                               class="btn btn-warning btn-rounded btn-sm">
                                                <i class="bi bi-pencil-square"></i> Güncelle
                                            </a>
                                        </td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @* <br />
                        <a href="/Admin/Contact/CreateContact" class="btn btn-primary btn-rounded btn-sm">
                            <i class="bi bi-plus-circle"></i> Yeni İletişim Mesajı Ekle
                        </a> *@
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
