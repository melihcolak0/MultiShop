@model SlidersOffersViewModel

@{
    int index = 0;
}

<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    @foreach (var item in Model.Sliders)
                    {
                        string activeClass = index == 0 ? "active" : "";

                        <div class="carousel-item position-relative @activeClass" style="height: 430px; border-radius: 16px; overflow: hidden;">
                            <img class="position-absolute w-100 h-100" src="@item.ImageUrl" style="object-fit: cover; border-radius: 16px;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3">@item.Title</h1>
                                    <p class="mx-md-5 px-5">@item.Description</p>
                                </div>
                            </div>
                        </div>

                        index++;
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            @foreach(var item in Model.SpecialOffers.Take(2))
            {
                <div class="product-offer mb-30" style="height: 200px; border-radius: 16px;">
                    <img class="img-fluid" src="@item.ImageUrl" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@item.Title</h6>
                        <h3 class="text-white mb-3">@item.SubTitle</h3>
                        <a href="" class="btn btn-primary">Şimdi Keşfet</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Carousel End -->
