<script>
    const priceRange = document.getElementById('priceRange');
    const priceValue = document.getElementById('priceValue');

    const formatter = new Intl.NumberFormat('tr-TR', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });

    function updatePriceValue() {
        const min = formatter.format(Number(priceRange.min));
        const max = formatter.format(Number(priceRange.value));

        priceValue.textContent = `${min} ₺ - ${max} ₺`;
    }

    priceRange.addEventListener('input', updatePriceValue);

    priceRange.addEventListener('change', () => {
        const url = new URL(window.location.href);
        url.searchParams.set("Price", priceRange.value);
        url.searchParams.set("Page", 1);
        window.location.href = url.toString();
    });

    updatePriceValue();

    function changeViewMode(mode) {
        const url = new URL(window.location.href);

        url.searchParams.set("ViewMode", mode);
        url.searchParams.set("Page", 1);

        window.location.href = url.toString();
    }
</script>

