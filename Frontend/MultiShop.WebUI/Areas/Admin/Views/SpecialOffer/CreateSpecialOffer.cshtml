@model CreateSpecialOfferDTO

@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .fixed-dropdown {
        min-height: 35px !important;
        height: auto !important;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-gift"></i> Özel Teklifler
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-gift"></i> Özel Teklifler</li>
            <li class="active"><i class="bi bi-plus-circle"></i> Yeni Özel Teklif Ekleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Yeni Özel Teklif Ekleme</h4>
                    <br />
                    <form method="post">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input class="form-control" type="text" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Alt Başlık</label>
                            <input class="form-control" type="text" asp-for="SubTitle">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input class="form-control" type="text" asp-for="ImageUrl">
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-plus-circle"></i> Ekle
                        </button>
                        <a href="/Admin/SpecialOffer/Index" class="btn btn-default btn-rounded btn-sm">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
