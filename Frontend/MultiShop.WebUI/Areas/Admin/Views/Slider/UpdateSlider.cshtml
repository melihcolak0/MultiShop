@model GetSliderDTO

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .fixed-dropdown {
        min-height: 35px !important;
        height: auto !important;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-images"></i> Slider
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-images"></i> Slider</li>
            <li class="active"><i class="bi bi-pencil-square"></i> Slider Güncelleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Slider Güncelleme</h4>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="SliderId" />
                        <input type="hidden" asp-for="Status" />
                        <div class="form-group">
                            <label>Başlık</label>
                            <input class="form-control" type="text" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            <input class="form-control" type="text" asp-for="ImageUrl">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </button>
                        <a href="/Admin/Slider/Index" class="btn btn-default btn-rounded btn-sm ">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
