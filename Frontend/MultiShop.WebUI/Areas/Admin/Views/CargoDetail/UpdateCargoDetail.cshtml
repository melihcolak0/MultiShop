@model GetCargoDetailDTO

@{
    ViewData["Title"] = "UpdateCargoDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .fixed-dropdown {
        min-height: 35px !important;
        height: auto !important;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-file-text"></i> Kargo Detayları
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-file-text"></i> Kargo Detayları</li>
            <li class="active"><i class="bi bi-pencil-square"></i> Kargo Detayı Güncelleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Kargo Detayı Güncelleme</h4>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="CargoDetailId" />
                        <div class="form-group">
                            <label>Gönderen</label>
                            @Html.DropDownListFor(x => x.SenderCustomer, (List<SelectListItem>)ViewBag.Users, new { @class = "form-control fixed-dropdown" })
                        </div>
                        <div class="form-group">
                            <label>Alıcı</label>
                            @Html.DropDownListFor(x => x.ReceiverCustomer, (List<SelectListItem>)ViewBag.Users, new { @class = "form-control fixed-dropdown" })
                        </div>
                        <div class="form-group">
                            <label>Barkod</label>
                            <input class="form-control" type="text" asp-for="Barcode">
                        </div>
                        <div class="form-group">
                            <label>Kargo Şirketi</label>
                            @Html.DropDownListFor(x => x.CargoCompanyId, (List<SelectListItem>)ViewBag.CargoCompaines, new { @class = "form-control fixed-dropdown" })
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </button>
                        <a href="/Admin/CargoDetail/Index" class="btn btn-default btn-rounded btn-sm ">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
