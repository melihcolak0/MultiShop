@model GetCargoCustomerDTO

@{
    ViewData["Title"] = "GetUserCargoDetails";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <h3 class="text-primary text-center">
            <i class="fa fa-truck"></i> Kargo Bilgisi Güncelleme
        </h3>
        <ol class="breadcrumb">
            <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-users"></i> Kullanıcılar</li>
            <li class="active"><i class="bi bi-pencil-square"></i> Kargo Bilgisi Güncelleme</li>
        </ol>
    </section>

    <section class="content container-fluid">
        <div class="center-container">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Kargo Bilgisi Güncelleme</h4>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="CargoCustomerId" />
                        <input type="hidden" asp-for="CargoUserId" />
                        <div class="form-group">
                            <label>Adı</label>
                            <input class="form-control" type="text" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label>Soyadı</label>
                            <input class="form-control" type="text" asp-for="Surname">
                        </div>
                        <div class="form-group">
                            <label>E-posta</label>
                            <input class="form-control" type="email" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input class="form-control" type="text" asp-for="Phone">
                        </div>
                        <div class="form-group">
                            <label>İl</label>
                            <input class="form-control" type="text" asp-for="City">
                        </div>
                        <div class="form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District">
                        </div>
                        <div class="form-group">
                            <label>Adres</label>
                            <textarea class="form-control" asp-for="Address" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-rounded btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </button>
                        <a href="/Admin/User/Index" class="btn btn-default btn-rounded btn-sm ">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
