@model List<ResultSendboxDTO>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";

    int count = 0;
    var todayMessages = Model.Where(x => x.SendDate.Date == DateTime.Now.Date).Count();
    var thisWeekMessages = Model.Where(x => x.SendDate >= DateTime.Now.AddDays(-7)).Count();
    var thisMonthMessages = Model.Where(x => x.SendDate.Month == DateTime.Now.Month && x.SendDate.Year == DateTime.Now.Year).Count();
}

<style>
    .badge {
        border-radius: 20px;
        padding: 6px 16px;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: 0.3px;
    }

    .badge-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .badge-primary {
        background-color: #cfe2ff;
        color: #084298;
        border: 1px solid #b6d4fe;
    }

    .badge-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    /* YAZI BOYUTLARINI BÜYÜTME */
    .card-title {
        font-size: 22px !important;
        font-weight: 600;
    }

    .message-count-badge {
        background-color: #e3f2fd;
        color: #1976d2;
        padding: 5px 14px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        margin-left: 10px;
    }

    .table thead th {
        font-size: 15px;
        font-weight: 600;
        padding: 14px;
    }

    .table tbody td {
        font-size: 15px;
        padding: 14px;
        vertical-align: middle;
    }

    /* İstatistik Kartları */
    .card-body p {
        font-size: 14px;
    }

    .card-body h3 {
        font-size: 28px;
        font-weight: 700;
    }

    /* Boş Durum */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 80px;
            color: #dee2e6;
            margin-bottom: 20px;
        }

        .empty-state h5 {
            font-size: 22px;
            font-weight: 600;
        }

        .empty-state p {
            font-size: 16px;
        }

    /* Butonlar */
    .btn {
        font-size: 14px;
        padding: 8px 16px;
    }

    .btn-sm {
        font-size: 13px;
        padding: 6px 12px;
    }

    /* Arama Kutusu */
    .search-box input {
        font-size: 14px;
        padding: 8px 12px;
    }

    .filter-buttons .btn {
        margin-right: 5px;
        border-radius: 20px;
        padding: 6px 16px;
        font-size: 13px;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .card-header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-box {
        max-width: 300px;
    }

    .message-subject {
        font-weight: 600;
        color: #495057;
        cursor: pointer;
    }

        .message-subject:hover {
            color: #007bff;
            text-decoration: underline;
        }

    .message-preview {
        color: #6c757d;
        font-size: 14px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 300px;
    }

    .receiver-name {
        font-weight: 500;
        color: #495057;
    }

    .new-message-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 10px 24px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
    }

        .new-message-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            color: white;
        }
</style>

<div class="content-wrapper">

    <!-- Özet İstatistikler -->
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card" style="border-radius: 16px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1" style="font-size: 18px; opacity: 0.9;">Toplam Gönderilen</p>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                        <i class="mdi mdi-send" style="font-size: 48px; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border-radius: 16px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border: none;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1" style="font-size: 18px; opacity: 0.9;">Bugün Gönderilen</p>
                            <h3 class="mb-0">@todayMessages</h3>
                        </div>
                        <i class="mdi mdi-email-arrow-right" style="font-size: 48px; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>       
        <div class="col-md-3">
            <div class="card" style="border-radius: 16px; background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); color: white; border: none;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1" style="font-size: 18px; opacity: 0.9;">Son 7 Gün</p>
                            <h3 class="mb-0">@thisWeekMessages</h3>
                        </div>
                        <i class="mdi mdi-calendar-clock" style="font-size: 48px; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="border-radius: 16px; background: linear-gradient(135deg, #30cfd0 0%, #330867 100%); color: white; border: none;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1" style="font-size: 18px; opacity: 0.9;">Bu Ay</p>
                            <h3 class="mb-0">@thisMonthMessages</h3>
                        </div>
                        <i class="mdi mdi-calendar-month" style="font-size: 48px; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    
                    <!-- Başlık ve Filtre Alanı -->
                    <div class="card-header-actions">
                        <div>
                            <h4 class="card-title d-inline-block mb-0">
                                Giden Kutusu
                                <span class="message-count-badge">@Model.Count Mesaj</span>
                            </h4>
                        </div>
                        <div class="d-flex align-items-center">
                            <!-- Yeni Mesaj Butonu -->
                            <button class="btn new-message-btn mr-3" onclick="composeNewMessage()">
                                <i class="mdi mdi-plus-circle"></i> Yeni Mesaj
                            </button>
                            <!-- Arama Kutusu -->
                            <div class="search-box mr-3">
                                <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Mesaj ara...">
                            </div>
                            <!-- Filtre Butonları -->
                            <div class="filter-buttons">
                                <button class="btn btn-sm btn-outline-primary active" onclick="filterMessages('all')">
                                    <i class="mdi mdi-format-list-bulleted"></i> Tümü
                                </button>
                                <button class="btn btn-sm btn-outline-info" onclick="filterMessages('today')">
                                    <i class="mdi mdi-calendar-today"></i> Bugün
                                </button>
                                <button class="btn btn-sm btn-outline-success" onclick="filterMessages('week')">
                                    <i class="mdi mdi-calendar-week"></i> Bu Hafta
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <!-- Tablo -->
                        <div class="table-responsive">
                            <table class="table table-hover" id="messagesTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>
                                            <i class="mdi mdi-account"></i> Alıcı
                                        </th>
                                        <th>
                                            <i class="mdi mdi-email-outline"></i> Konu ve Önizleme
                                        </th>
                                        <th>
                                            <i class="mdi mdi-calendar"></i> Gönderim Tarihi
                                        </th>
                                        <th>
                                            <i class="mdi mdi-check-circle"></i> Durum
                                        </th>
                                        <th class="text-center">
                                            <i class="mdi mdi-cog"></i> İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x => x.SendDate))
                                    {
                                        count++;
                                        var daysDiff = (DateTime.Now - item.SendDate).Days;
                                        <tr data-days="@daysDiff">
                                            <td>
                                                <strong>@count</strong>
                                            </td>
                                            <td>
                                                <span class="receiver-name">
                                                    <i class="mdi mdi-account-circle text-muted"></i>
                                                    @item.ReceiverName @item.ReceiverSurname (@item.ReceiverEmail)
                                                </span>
                                            </td>
                                            <td>
                                                <div class="message-subject" onclick="viewMessageDetails(@item.UserMessageId)">
                                                    <i class="mdi mdi-email-send-outline text-primary"></i>
                                                    @item.Subject
                                                </div>
                                                <div class="message-preview">@item.MessageDetail</div>
                                            </td>
                                            <td>
                                                <i class="mdi mdi-clock-outline text-muted"></i>
                                                @item.SendDate.ToLocalTime().ToString("dd MMMM yyyy - HH:mm")
                                            </td>
                                            @if (item.IsRead)
                                            {
                                                <td><label class="badge badge-success"><i class="mdi mdi-check-all"></i> Okundu</label></td>
                                            }
                                            else
                                            {
                                                <td><label class="badge badge-info"><i class="mdi mdi-email"></i> Gönderildi</label></td>
                                            }
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-outline-primary" onclick="viewMessageDetails(@item.UserMessageId)" title="Mesajı Görüntüle">
                                                    <i class="mdi mdi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-success" onclick="forwardMessage(@item.UserMessageId)" title="İlet">
                                                    <i class="mdi mdi-share"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteMessage(@item.UserMessageId)" title="Sil">
                                                    <i class="mdi mdi-delete"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <!-- Boş Durum -->
                        <div class="empty-state">
                            <i class="mdi mdi-email-send-outline"></i>
                            <h5>Giden kutunuz boş</h5>
                            <p class="text-muted">Henüz hiç mesaj göndermediniz. Yeni bir mesaj göndererek başlayın!</p>
                            <button class="btn new-message-btn mt-3" onclick="composeNewMessage()">
                                <i class="mdi mdi-plus-circle"></i> Yeni Mesaj Oluştur
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Arama Fonksiyonu
    document.getElementById('searchInput')?.addEventListener('keyup', function() {
        const searchValue = this.value.toLowerCase();
        const rows = document.querySelectorAll('#messagesTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchValue) ? '' : 'none';
        });
    });

    // Filtreleme Fonksiyonu
    function filterMessages(filter) {
        const rows = document.querySelectorAll('#messagesTable tbody tr');
        const buttons = document.querySelectorAll('.filter-buttons .btn');

        // Buton active durumunu güncelle
        buttons.forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');

        rows.forEach(row => {
            const daysDiff = parseInt(row.getAttribute('data-days'));
            if (filter === 'all') {
                row.style.display = '';
            } else if (filter === 'today') {
                row.style.display = daysDiff === 0 ? '' : 'none';
            } else if (filter === 'week') {
                row.style.display = daysDiff <= 7 ? '' : 'none';
            }
        });
    }

    // Yeni Mesaj Oluştur
    function composeNewMessage() {
        window.location.href = `/User/Message/Compose`;
    }

    // Mesaj Detayları
    function viewMessageDetails(messageId) {
        window.location.href = `/User/Message/Details/${messageId}`;
    }

    // Mesajı İlet
    function forwardMessage(messageId) {
        window.location.href = `/User/Message/Forward/${messageId}`;
    }

    // Mesajı Sil
    function deleteMessage(messageId) {
        if (confirm('Bu mesajı silmek istediğinizden emin misiniz?')) {
            window.location.href = `/User/Message/Delete/${messageId}`;
        }
    }
</script>
